#
#   Following code injected from config.desktop
#

set $mon1 primary
set $mon2 primary

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        position top
        separator_symbol "â– "
		strip_workspace_numbers yes
		tray_output $mon2
        colors {

                # class                    # border        #bg      # text  # indicator # child-border
                background                 $invert_faded
                focused_workspace          $primary $primary  $invert 
                active_workspace           $invert_outline $invert  $invert_outline 
                inactive_workspace         $invert_outline $invert  $invert_outline 
                urgent_workspace           $alert         $alert  $invert
                statusline $text
        }
        height 28
        i3bar_command i3bar -t
        status_command i3blocks
}