{
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Wal",
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "[Monokai Dark Soda]": {
            "rules": {
                "parameter": "#cbafff",
                "*.constant": "#ffffff",
                "constParameter": "#ffffff"
            }
        }
    },
    "editor.showFoldingControls": "always",
    "editor.fontFamily": "Fira Mono",
    "editor.fontSize": 15,
    "editor.formatOnPaste": true,
    "files.associations": {
        "config": "toml",
        "*.svd": "xml",
        ".mappings": "toml",
        "*.x": "mapfile"
    },
    "latex-workshop.message.update.show": false,
    "latex-workshop.view.pdf.viewer": "tab",
    "rust-analyzer.cargo.allFeatures": true,
    "redhat.telemetry.enabled": false,
    "cSpell.userWords": [
        "Espressif's"
    ],
    "errorLens.enabled": false,
    "cmake.configureOnOpen": false,
    "terminal.integrated.gpuAcceleration": "canvas",
    // TODO hopefully this will be included in themes soon
    "workbench.colorCustomizations": {
        "editorInlayHint.background": "#2246461a",
        "editorInlayHint.foreground": "#898a60",
        "editorInlayHint.parameterBackground": "#00000000",
        "editorInlayHint.parameterForeground": "#808080",
        "editorInlayHint.typeBackground": "#00000000",
        "editorInlayHint.typeForeground": "#808080",
    },
    "rust-analyzer.diagnostics.experimental.enable": false,
    "grammarly.files.include": [
        "**/README.md",
        "**/readme.md",
        "**/*.txt",
        "**/*.md"
    ],
    "grammarly.config.suggestions.ConjunctionAtStartOfSentence": true,
    "terminal.integrated.shellIntegration.enabled": false,
    "terminal.integrated.shellIntegration.decorationsEnabled": "never",
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "workbench.editorAssociations": {
        "*.bin": "hexEditor.hexedit"
    },
    "window.zoomLevel": 1,
    "editor.minimap.enabled": false
}